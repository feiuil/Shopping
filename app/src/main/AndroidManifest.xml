<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uil.administrator.shopping">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Activity.MainActivity"/>
        <activity android:name=".Activity.Welcome_page"></activity>
        <activity android:name=".Activity.Welcome_Image">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--注册/登陆页面-->
        <activity android:name=".Activity.LoginAndRegisterActivity"></activity>
        <!--意见反馈页面-->
        <activity android:name=".Activity.FeedbackActivity"></activity>
        <!--系统设置页面-->
        <activity android:name=".Activity.SystemSettingsActivity"></activity>
        <!--关于网购潮页面-->
        <activity android:name=".Activity.AboutShoppingActivity"></activity>

    </application>

</manifest>
