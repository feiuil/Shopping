<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:padding="20dp"
        android:id="@+id/tv_fragmet_brandsale_special"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/fragment_bandsale_special" />

    <TextView
        android:id="@+id/tv_fragmet_brandsale_clothing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/fragment_bandsale_clothing" />

    <TextView
        android:id="@+id/tv_fragmet_brandsale_shoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/fragment_bandsale_shoes" />

    <TextView
        android:id="@+id/tv_fragmet_brandsale_childclothing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/fragment_bandsale_childclothing" />
</LinearLayout>
